<div class="column is-3 is-offset-1">
  <h3 class="title is-5 has-text-grey-light">Channels</h3>

  <ul class="list">
    <% @channels.each do |c| %>
    <li><%= link_to c.channel, c %></li>
    <% end %>
  </ul>

  <br/>

  <div class="column is-8 is-offset--0">
  <h3 class="title is-5 has-text-grey-light">Conversations</h3>

  <ul class="list">
    <% @messages.each do |m| %>
    <li><%= link_to m.messages, m %></li>
    <% end %>
  </ul>


  <br/>

  <% if has_role?(:admin) %>
  <%= link_to 'New Channel', new_channel_path, class:'button is-info' %>
  <% end %>

</div>

